= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :authors
    = f.text_field :authors
  .field
    = f.label :isbn
    = f.text_field :isbn
  .field
    = f.label :pages
    = f.number_field :pages
  .field
    = f.label :covers
    = f.text_field :covers
  .actions
    = f.submit 'Save'
